<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="personDao" class="com.sq.dao.impl.PersonDaoImpl"/>
    <bean id="personService" class="com.sq.service.impl.PersonServiceImpl">
        <property name="dao" ref="personDao"/>
    </bean>
    <bean id="personServlet" class="com.sq.servlet.PersonServlet">
        <property name="service" ref="personService"/>
    </bean>
</beans>